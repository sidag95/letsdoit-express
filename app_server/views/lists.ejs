<!DOCTYPE html>
<html>
  <head>
  	<meta name='viewport' content='width=device-width' initial-scale=1.0/>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <%- include('_includes/header'); %>
    <div class="container">
        <h1><%= title %></h1>
        <div class="row">
            <div class="col-sm-12 col-md-8">
                <div class="row">
                  <div class="col-sm-12 error"><p><br><%= message %></p></div>
                  <div class="col-sm-4 col-sm-offset-8">
                    <button type="button" class="btn pull-right undo">
                      Undo
                    </button><br>
                  </div>
                </div>
                <% for(var i=0; i<tasks.length; i++){%>
                    <div class="panel panel-default tasks" id=<%= tasks[i]._id %>>
                      <div class="panel-heading">
                        <h3 class="panel-title"><%= tasks[i].taskName %></h3>
                      </div>
                      <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-9 task-text">
                              <p><%= tasks[i].taskBody %></p>
                            </div>
                            <div class="col-xs-3">
                              <button type="button" class="btn btn-default btn tick-btn">
                                <span class="glyphicon glyphicon-ok pull-right tick" aria-hidden="true"></span>
                              </button>
                              <button type="button" class="btn btn-default pencil-btn">
                                <span class="glyphicon glyphicon-pencil pull-right" aria-hidden="true"></span>
                              </button>
                              <button type="button" class="btn btn-default btn delete-btn">
                                  <span class="glyphicon glyphicon-trash pull-right" aria-hidden="true"></span>        
                              </button>
                            </div>
                        </div>
                      </div>
                    </div>
                <%}%>
            </div>
            <div class="col-sm-12 col-md-4">
                <h3>Tasks</h3>
                <div class="list-group">
                  <% for(var i=0; i<tasks.length; i++){%>
                      <a role="button" class="btn list-group-item" href=<%= "#"+tasks[i].taskId %>><%=tasks[i].taskName %></a>
                  <%}%>
                </div>
            </div>
        </div>
    </div>
    <a href="/lists/new" class="btn btn-primary btn-lg fixed" role="button">Add a new Task</a>
    <!-- Footer -->
    <%- include('_includes/footer'); %>
    <script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/lists.js"></script>

  </body>
</html>
